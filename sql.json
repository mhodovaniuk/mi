{
    "case-sensitive":false,
    "ignore":["whitespace"],
    "keywords": ["select", "where", "from", "in", "like", "and"],
    "error": {
        "class-name":"error",
        "recovery-classes":["whitespace","separator"]
    },
    "patterns": [
        {
            "class":"identifier",
            "pattern":"[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
            "class":"whitespace",
            "pattern":"[ \t\n]+"
        },
        {
            "class":"integer",
            "pattern":"[1-9][0-9]*"
        },
        {
            "class":"string",
            "pattern":"[\'][.@%a-zA-Z0-9_]*[\']"
        },
        {
            "class":"separator",
            "pattern":"[;,()]"
        },
        {
            "class":"operator",
            "pattern":"="
        }
    ]
}